<section class="edit-blog">

  <div class="container">
    <%= form_for @blog_post do |f| %>
      <div>
        <%= f.text_field :title %>
      </div>
      <div>
        <%= f.text_area :content, :class =>'blog-post' %>
      </div>
      <div>
        <%= f.submit 'Save changes' %>
      </div>
    <% end %>
  </div>

</section>